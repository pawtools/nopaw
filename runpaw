#!/usr/bin/env python

import yaml
import pawtools

if __name__ == "__main__":

    parser = get_parser()
    args = parser.parse_args()
    print(args)

    config = yaml.safe_load(args.config)
    command_config_filepath = config[args.command]

    logger = get_logger(__name__, "INFO" if args.verbose else "WARNING")
    logger.info("Running PAW command '%s'"%args.command)
    logger.info("with args {}".format(args))

    # No changes needed here when expanding command set
    paw_function = getattr(pawtools, args.command)
    paw_function(args, command_config_filepath)
